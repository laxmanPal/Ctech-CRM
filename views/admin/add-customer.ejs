<%- include("../includes/head.ejs") %>
  <%- include("../includes/header.ejs") %>
    <%- include("../includes/sidebar.ejs") %>
      <div class="contents">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
             <% if (errors) { %>
              <div class=" alert alert-danger  alert-dismissible fade show  mt-4" role="alert">
                <div class="alert-content">
                  <p> <%= errors %> </p>
                  <button type="button" class="btn-close text-capitalize" data-bs-dismiss="alert" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                      stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                      class="svg replaced-svg">
                      <line x1="18" y1="6" x2="6" y2="18"></line>
                      <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                  </button>
                </div>
              </div>
              <% } %>
              <div class="breadcrumb-main">
                <h4 class="text-capitalize breadcrumb-title">Add Customer</h4>
                <div class="breadcrumb-action justify-content-center flex-wrap">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="/admin/"><i class="uil uil-estate"></i>Home</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Add Customer
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="card card-Vertical card-default card-md mb-4">
                <div class="card-body py-md-30">
                  <form action="/admin/add-customer" method="post" novalidate>
                    <div class="row">
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Customer
                          Name <span style="color: red;">*</span> </label>
                        <input type="text" name="cust_name"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Customer Name" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Email
                          Address<span style="color: red;">*</span></label>
                        <input type="email" name="cust_email"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Email" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Phone
                          1<span style="color: red;">*</span></label>
                        <input type="number" name="cust_phone_1"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Mobile" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Phone
                          2</label>
                        <input type="number" name="cust_phone_2"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Mobile" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Phone
                          3</label>
                        <input type="number" name="cust_phone_3"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Mobile" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Phone
                          4</label>
                        <input type="number" name="cust_phone_4"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Mobile" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput" class="color-dark fs-14 fw-500 align-center mb-10">Company
                          Name<span style="color: red;">*</span></label>
                        <input type="text" name="comp_name"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Company Name" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput"
                          class="color-dark fs-14 fw-500 align-center mb-10">Address<span style="color: red;">*</span></label>
                        <input type="text" name="address" class="form-control ih-medium ip-gray radius-xs b-light px-15"
                          placeholder="Address" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput"
                          class="color-dark fs-14 fw-500 align-center mb-10">City<span style="color: red;">*</span></label>
                        <input type="text" name="city" class="form-control ih-medium ip-gray radius-xs b-light px-15"
                          placeholder="City" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput"
                          class="color-dark fs-14 fw-500 align-center mb-10">Pincode<span
                            style="color: red;">*</span></label>
                        <input type="number" name="pincode"
                          class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Pincode" />
                      </div>
                      <div class="col-md-6 mb-25">
                        <label for="formGroupExampleInput"
                          class="color-dark fs-14 fw-500 align-center mb-10">Password<span
                            style="color: red;">*</span></label>
                        <div class="position-relative">
                          <input id="password-field" type="password"
                            class="form-control  ih-medium ip-gray radius-xs b-light px-15" name="password"
                            placeholder="Password" />
                          <div class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2"></div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="layout-button mt-0">
                          <button type="button" class="btn btn-default btn-squared btn-light px-20">
                            cancel
                          </button>
                          <button class="btn btn-primary btn-default btn-squared px-30">
                            save
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include("../includes/footer.ejs") %>